    <div class="row">
        <div class="col-md-12 col-md-offset-12">
     
    <div class="all-posts-area ">
   <div id="">
   
      <form  class="form-signin" action="/posts" id="form" method="POST" enctype="multipart/form-data">
           
        <div >    <%- messages('message', locals) %></div>  

 
        <div class="form-row">
         
            <label for="categoryOption" class="textlabel">Category</label>
        <!--  <form action="/getValues" method="POST">-->
             <select required id="catOption"  name="catOption" class="form-control textboxes" placeholder="choose category" data-toggle="tooltip"
              title="click for dropdown">
           
            <option selected value="">---------------------Choose Category--------------------- </option>
           
          <% for (a=0; a< category.length; a++) {%>
              <option value="<%= category[a].category%>"> <%= category[a].category %></option>
              
             <% }%> 
          
             </select>
           <!--  <input type="submit" > </input>
                             
           </form> -->
                  
        </div>
        <div class="form-row">
            <label for="sCategoryOption" class="textlabel">SubCategory</label>
            <select required id="sCategoryOption" name="sCategoryOption" class="form-control textboxes" placeholder="choose sub category" data-toggle="tooltip"
            title="click for dropdown">
            <option selected value="">-------------------Choose SubCategory----------------- </option>
          
        </select>
        </div>
          <div class="form-row">
              <label for="inputTopic" class="textlabel" >Topic</label>
            <input required type="text" class="form-control textboxes" id="inputTopic" name = "inputTopic" title="enter topic" placeholder="e.g Woman sets man's house on fire">
           
          </div>
          <div class="form-row">
            <label for="inputLink" class="textlabel">Topic Link</label>
            <input type="text" class="form-control textboxes" id="inputLink" name = "inputLink" title="enter/copy topic url for video" placeholder="e.g: https://www.facebook.com/plugins/">
           
          </div>
          <p>  </p>
          <div class="form-row">
            
              <%= typeof msg != 'undefined' ? msg: '' %>
       <!-- <form action='/posts' method="POST" enctype="multipart/form-data">  onchange="readURL(this);" -->
        <label for="image" class="textlabel" title="upload image thumbnail for post">Upload Images (max. 3 fileSize max 2mb)</label>
        <br>
        <input class="textlabel" type='file' id='image' onchange="readURL(this);" name='image' multiple/>
              
        <!--  </form>-->
         <br>
          <img id="prev" src="<%= typeof  file != 'undefined' ? file: ' ' %>"  class="img-responsive"/>
          </div>
          <p>   </p>
          <div class="form-row" >
            <label for="inputDuration" class="textlabel">Video Duration</label>
            <input  type="text" class="form-control textboxes" id="inputDuration" name = "inputDuration" title="enter duration of video eg 05:30" placeholder="e.g 05:30">
           
          </div>
          <div class="form-row">
          
            <label for="inputAuthor" class="textlabel">Author</label>
            <input required type="text" class="form-control textboxes" id="inputAuthor" name = "inputAuthor" title="enter reporter name" placeholder="e.g: Gabriel Obi" title="enter name of reporter">
           
          </div>
          <div class="form-row">
              <div class=" imggroup">
               
          </div>
          <div class="form-row">
              
          </div>
          
        </div>
        <div class="form-row">
            <label for="news" class="textlabel">News</label>
            <textarea required name="news" class="form-control textboxes" id="news" cols="30" rows="10" title="enter news"></textarea>
            
        </div>

        <div class="form-row button-wrapper">
            <div class="col-12 col-md-6">
                <button type="submit" class="btn btn-primary btn-danger btn-block">Post</button>
       
            </div>
            <div class="col-12 col-md-6">
          <button type="submit" class="btn btn-primary btn-danger btn-block" formaction="/exit">Exit</button>
          </div>
          </div>
          
        </form>
         
